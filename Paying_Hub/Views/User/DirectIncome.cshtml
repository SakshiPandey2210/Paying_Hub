@model List<Paying_Hub.Models.DirectIncomeLedgerModel>
@{
    ViewData["Title"] = "DirectIncome";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
    string sponsorId = Context.Session.GetString("ReferralCode") ?? "";
}
<div class="row">
    <div class="col-lg-12">
        <div class="panel-content">
<div class="row merged20 mb-4">
    <div class="col-lg-12 mb-3">
        <div class="d-widget">
            <div class="d-widget-title">
                <h4>View Income Report	</h4>
            </div>

            <form class="row">


                <div class="form-group col-md-6">
                    <div class="row align-items-center">
                        <label class="col-md-4 form-label" for="from_date">From Date</label>
                        <div class="col-md-8">
                            <input type="date" class="form-control" id="from_date" name="from_date">
                        </div>
                    </div>
                </div>


                <div class="form-group col-md-6">
                    <div class="row align-items-center">
                        <label class="col-md-4 form-label" for="to_date">To Date</label>
                        <div class="col-md-8">
                            <input type="date" class="form-control" id="to_date" name="to_date">
                        </div>
                    </div>
                </div>



                <div class="form-group col-md-6">
                    <div class="row align-items-center">
                        <label class="col-md-4 form-label">Login Id</label>
                        <div class="col-md-8">
                            <input type="text" class="form-control" name="loginId" id="txtintroducer_id" onblur="get_intro_detail()" value="@sponsorId" readonly>
                        </div>
                    </div>
                </div>


                <div class="col-md-8 offset-2">



                    <button type="submit" class="button primary ">Submit</button>
                    <button type="Reset" class="button danger">Reset</button>
                </div>









            </form>

        </div>
    </div>
    <div class="col-lg-12">
        <div class="d-widget mb-4">
            <table class="table table-default  table-responsive">
                <thead>
                    <tr>
                        <th>Sn</th>
                        <th>User Id</th>
                        <th>User Name</th>
                        <th>Transaction ID</th>
                        <th>Description</th>
                        <th>Amount</th>
                        <th>Date</th>

                    </tr>
                </thead>
                <tbody>
                    @{
                        int sn = 1;
                    }
                    @if (Model != null && Model.Any())
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>@(sn++)</td>
                                <td>@item.UserID</td>
                                <td>@item.UserName</td>
                                <td>@item.TransactionID</td>
                                <td>@item.Description</td>
                                <td>@item.Amount</td>
                                <td>@(item.Date.HasValue ? item.Date.Value.ToString("dd-MM-yyyy") : "")</td>

                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="7" class="text-center">No records found</td>
                        </tr>
                    }
                </tbody>

            </table>


        </div>

    </div>
</div>
</div>
</div>
</div>
