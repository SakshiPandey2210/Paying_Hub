@model List<Paying_Hub.Models.MemberMaster>
@{
    ViewData["Title"] = "Password";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row merged20 mb-3">
	<div class="col-lg-12">
		<div class="d-widget">
			<div class="d-widget-title">
				<h4>All Member</h4>
			</div>

			<form class="row" asp-action="Password" asp-controller="Member">


				<div class="form-group col-md-6">
					<div class="row align-items-center">
						<label class="col-md-4 form-label" for="from_date">From Date</label>
						<div class="col-md-8">
							<input type="date" class="form-control" id="from_date" name="fromDate">
						</div>
					</div>
				</div>


				<div class="form-group col-md-6">
					<div class="row align-items-center">
						<label class="col-md-4 form-label" for="to_date">To Date</label>
						<div class="col-md-8">
							<input type="date" class="form-control" id="to_date" name="toDate">
						</div>
					</div>
				</div>


				<div class="form-group col-md-6">
					<div class="row align-items-center">
						<label class="col-md-4 form-label">Login Id</label>
						<div class="col-md-8">
							<input type="text" class="form-control" name="loginId" id="txtintroducer_id" onblur="get_intro_detail()" value="">
						</div>
					</div>
				</div>

				<div class="form-group col-md-6">
					<div class="row align-items-center">
						<label class="col-md-4 form-label">Mobile Number</label>
						<div class="col-md-8">
							<input type="text" class="form-control" id="txtmobile" name="mobileNumber" placeholder="Enter Mobile">
						</div>
					</div>
				</div>


				<div class="col-md-8 offset-2">



					<button type="submit" class="button primary ">Search</button>
					<button type="Reset" class="button danger">Reset</button>
				</div>









			</form>



		</div>
	</div>
</div>

<div class="row merged20 mb-3">
	<div class="col-lg-12">
		<div class="d-widget">
			<div class="d-widget-title">
				<h4>View All Member</h4>
			</div>
			<table class="table table-default  table-responsive">
				<thead>
					<tr>
						<th>Sn</th>
						<th>Action</th>
						<th>User Name</th>
						<th>Login ID</th>
						<th>Password</th>
						<th>Pin Password</th>
					</tr>
				</thead>
				@{
					int sn = 1;
				}
				<tbody>
					@if (Model != null && Model.Any())
					{
					
						foreach (var item in Model)
						{
							<tr>
								<td>@(sn++)</td>
								<td>
									<div class="uk-margin d-flex">
										<button data-toggle="modal" data-target="#user_password" class="button outline-primary small transition-3d-hover">
											<i class="icofont-pen-alt-1"></i> Edit
										</button>
									</div>
								</td>
								<td>@item.Name</td>
								<td>@item.ReferralCode</td>
								<td>@item.Password</td>
								<td>@item.Password</td>

							</tr>
						}
					}
					else
					{
						<tr>
							<td colspan="4" class="text-center">No records found</td>
						</tr>
					}
				</tbody>
			</table>
		</div>
	</div>
</div>

